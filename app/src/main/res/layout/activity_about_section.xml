<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about_section">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/icon"
                android:layout_marginTop="70dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:src="@drawable/emer_call" />

            <TextView
                android:id="@+id/Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="This is an emergency calling application which contains all the phone numbers a person needs at the time of emergency.\n\n   The numbers are placed in categorised manner which makes the application simpler to use.\n\nThis application also allows the user to make calls from the app itself."
                android:textSize="20dp"
                android:layout_marginTop="7dp"
                android:layout_marginHorizontal="20dp"

                />

            <TextView
                android:id="@+id/highHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="110dp"
                android:fontFamily="@font/alfa_slab_one"
                android:gravity="center"
                android:text="Main Highlights"
                android:textColor="@color/grey_V2"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/highlights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=">>  Minimalistic design.\n>>  Categorised Sections.\n>>  Friendly and Colourful Interface.\n>>  Calling feature within the application."
                android:textSize="20dp"
                android:layout_marginTop="7dp"
                android:layout_marginHorizontal="20dp"
                />

            <TextView
                android:id="@+id/getTouch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/alfa_slab_one"
                android:gravity="center"
                android:text="Get in touch >"
                android:textColor="@color/grey_V2"
                android:textSize="21dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:id="@+id/ld_in"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="18dp"
                    android:src="@drawable/ld_in"/>
                <ImageView
                    android:id="@+id/git"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="18dp"
                    android:src="@drawable/github"/>

                <ImageView
                    android:id="@+id/twitter"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="18dp"
                    android:src="@drawable/twit"/>
            </LinearLayout>
            <TextView
                android:id="@+id/copyright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="16dp"
                android:fontFamily="monospace"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>